<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MainActivity application Theme -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- ThemeActivity application Theme -->
    <style name="ProfileTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:title">Profile</item>
    </style>

    <!-- NoActionBar application Theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ActionBar application Dark Theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- ActionBar application Light Theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
